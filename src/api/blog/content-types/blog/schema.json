{
  "kind": "collectionType",
  "collectionName": "blogs",
  "info": {
    "singularName": "blog",
    "pluralName": "blogs",
    "displayName": "Blog"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "minLength": 2
    },
    "subtitle": {
      "type": "string"
    },
    "body": {
      "type": "blocks",
      "required": true
    },
    "media": {
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "type": "media",
      "multiple": true,
      "required": true
    },
    "author": {
      "type": "string",
      "required": true,
      "minLength": 2
    },
    "headline": {
      "type": "boolean",
      "default": false
    },
    "featured": {
      "type": "boolean",
      "default": false
    }
  }
}
